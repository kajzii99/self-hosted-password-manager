@using SelfHostedPasswordManager.ViewModels;
@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_RegisterLoginLayout.cshtml";
    ViewData["Title"] = "Login";
}
   
<section class="vh-100"
  <div class="mask d-flex align-items-center h-100">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h1 class="text-center mb-5">Create an account</h1>

              <form method="post" autocomplete="off">
                  <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-outline mb-4">
                  <label asp-for="Email" class="register-label" ></label>
                  <input asp-for="Email" id="form3Example3cg" class="form-control form-control-lg" />
                  @*<span asp-validation-for="Email" class="form-label" for="form3Example3cg"></span>*@
                </div>

                <div class="form-outline mb-4">
                  <label asp-for="Password" class="register-label"></label>
                  <input asp-for="Password" id="form3Example4cg" class="form-control form-control-lg autocomplete="off" />
                  @*<span asp-validation-for="Password" for="form3Example4cg"></span>*@
                </div>

                <div class="form-outline mb-4">
                  <label asp-for="ConfirmPassword" class="register-label"></label>
                  <input asp-for="ConfirmPassword" id="form3Example4cdg" class="form-control form-control-lg autocomplete="off" />
                  @*<span asp-validation-for="ConfirmPassword" for="form3Example4cdg"></span>*@
                </div>

                @*<div class="form-check d-flex justify-content-center mb-5">
                  <input class="form-check-input" type="checkbox"/>
                  <label class="form-check-label" for="form2Example3g">
                    I agree all statements in 
                    <a href="#!" class="text-body">
                        <u>Terms of service</u
                    ></a>
                  </label>
                </div>*@

                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? 
                    <a href="/Account/Login" class="fw-bold text-body">
                        <u>Login here</u>
                    </a>
                </p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>